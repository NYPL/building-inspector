<% content_for :dynamic_js do %>
  <style type="text/css">
    #map {
      width: 100%;
      height: 500px;
    }
  </style>
  <%= javascript_include_tag "admin/flag", {:id => "data", "data-flag" => "#{@flag.to_geojson.to_json}", "data-tiles" => "#{@tileset}", "data-type" => "#{@tiletype}"} %>
<% end %>

<p id="notice"><%= notice %></p>

<div id="map"></div>

<p>
  <b>Task:</b>
  <%= @flag.flag_type %>
</p>

<p>
  <b>Type:</b>
  <%= @flag.flaggable_type %>
</p>

<p>
  <b>Polygon/Sheet:</b>
  <%= link_to @flag.flaggable_id, @flag.flaggable %>
</p>

<p>
  <b>Session:</b>
  <%= @flag.session_id %>
  <% if @flag.usersession != nil %>
  (<%= @flag.usersession.user.role %>)
  <% end %>
</p>

<p>
  <b>Latitude:</b>
  <%= @flag.latitude %>
</p>

<p>
  <b>Longitude:</b>
  <%= @flag.longitude %>
</p>

<p>
  <b>Flag value:</b>
  <%= @flag.flag_value %>
</p>

<p>
  <b>Is primary:</b>
  <%= @flag.is_primary %>
</p>

<p>
  <b>Created at:</b>
  <%= time_ago_in_words(@flag.created_at) %> ago
  (<%= @flag.created_at %>)
</p>

<%= link_to 'Edit', edit_flag_path(@flag) %> |
<%= link_to 'Back', flags_path %>
