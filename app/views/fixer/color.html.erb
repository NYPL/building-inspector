<% content_for :page_title do %>Building Inspector by NYPL Labs<% end %>

<% content_for :dynamic_js do %>
  <%= stylesheet_link_tag    "inspector", :media => "all" %>
  <%= javascript_include_tag "inspector_color", {:id => "colorjs", "data-server" => CGI.escape("#{request.protocol}#{request.host_with_port}"), "data-session" => "#{@isNew}", "data-map" => "#{@map}"} %>
<% end %>

<%= render :partial => "partials/nav" %>
<%= render :partial => "partials/main_container", locals: {css_class: "transparent small-highlight"} %>

<div id="controls" class="compact transparent">
  <div id="buttons">
    <div class="wrapper">
      <div class="multiple">
        <input id="multiple-checkbox" class="css-checkbox" name="multiple-checkbox" type="checkbox" value="1">
        <label for="multiple-checkbox" class="css-label" id="multiple-text">More than one color?</label>
      </div>
      <div id="lower-controls" class="wrapper">
        <a href="javascript:;" id="pink-button" title="Keyboard shortcut: 1" rel="nofollow">PINK</a>
        <a href="javascript:;" id="blue-button" title="Keyboard shortcut: 2" rel="nofollow">BLUE</a>
        <a href="javascript:;" id="yellow-button" title="Keyboard shortcut: 3" rel="nofollow">YELLOW</a>
        <a href="javascript:;" id="green-button" title="Keyboard shortcut: 4" rel="nofollow">GREEN</a>
        <a href="javascript:;" id="gray-button" title="Keyboard shortcut: 5" rel="nofollow">GRAY</a>
        <a href="javascript:;" id="save-button" class="button secondary color" rel="nofollow">SAVE</a>
      </div>
    </div>
  </div>
</div>
<%= link_to (content_tag "span","The New York Public Library"), "http://www.nypl.org", {:class => "nypl-logo", :title => "Visit NYPL.org", :id=>"nypl-mini"} %>
