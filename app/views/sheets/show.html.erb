<% content_for :dynamic_js do %>
	<style type="text/css">
		#map {
			width: 100%;
			height: 600px;
		}
	</style>
	<%= javascript_include_tag "admin/sheet", {:id => "sheetdata", "data-map" => "#{@map.to_json}", "data-tiles" => "#{@tileset}", "data-sheet" => "#{@sheet.to_json}", "data-type" => "#{@tiletype}"} %>
<% end %>

<p id="notice"><%= notice %></p>

<div id="map"></div>

<p>
  <b>Polygon count:</b>
  <%= @sheet.polygons.count %>
</p>

<p>
  <b>Bbox (W,S,E,N):</b>
  <%= @sheet.bbox %>
</p>

<p>
  <b>Map:</b>
  <%= @sheet.map_id %>
</p>

<p>
  <b>Layer:</b>
  <%= link_to @sheet.layer_id, @sheet.layer %>
</p>


<%= link_to 'Edit', edit_sheet_path(@sheet) %> |
<%= link_to 'Back', sheets_path %>
